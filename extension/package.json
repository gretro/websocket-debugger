{
  "name": "websocket-debugger",
  "version": "0.1.0",
  "description": "Websocket debugger Chrome extension",
  "main": "index.js",
  "repository": "https://github.com/gretro/websocket-debugger",
  "author": "Gabriel Lemire",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "test:dev": "jest --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "start": "better-npm-run dev",
    "build": "npm run clean && npm run lint && better-npm-run build:prod"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack --config build/webpack.config.js --watch",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack --config build/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "@types/chrome": "0.0.48",
    "@types/clone": "^0.1.30",
    "@types/deep-freeze": "0.1.1",
    "@types/jest": "21.1.2",
    "awesome-typescript-loader": "3.2.3",
    "better-npm-run": "0.1.0",
    "clone": "^2.1.1",
    "copy-webpack-plugin": "4.1.1",
    "deep-freeze": "0.0.1",
    "jest": "21.2.1",
    "rimraf": "2.6.2",
    "ts-jest": "21.1.2",
    "tslint": "5.7.0",
    "tslint-config-standard": "6.0.1",
    "tslint-webpack-plugin": "1.0.0",
    "typescript": "2.5.3",
    "webpack": "3.6.0"
  },
  "dependencies": {
    "redux": "3.7.2",
    "redux-observable": "0.16.0",
    "rxjs": "5.4.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
